 @model Resume.Domain.DTO.Siteside.Home_Index.HomeIndexModelDTO;
@{
	ViewData["Title"] = "Home Page";
	// var educaties = ViewBag.Educaties as List<Resume.Domain.Models.Entities.Educaties.Educaties>;
	// var experience = ViewBag.Experience as List<Resume.Domain.Models.Entities.Experience.Experience> ;
	// var myskills = ViewBag.MySkills as List<Resume.Domain.Models.Entities.MySkills.MySkills> ;روش دوم

}

<!-- Content -->
<div class="content" data-simplebar>
	<div class="section mt-0">
		<h1 class="title title--h1 title__separate">Resume</h1>
	</div>

	<!-- Experience -->
	<div class="section">
		<h2 class="title title--h2"><img class="title-icon" src="/SiteSample/assets/icons/icon-education.svg" alt="" /> Education</h2>
		<div class="timeline">
			@foreach (var item in Model.Educaties)
			{
			<article class="timeline__item">
					<h5 class="title title--h3 timeline__title">@item.EducatiesTitle</h5>
				<span class="timeline__period">@item.EducatiesDuration</span>
					<p class="timeline__description">@item.EducatiesDescription</p>
			</article>
		
			}
			<!-- Item -->
	


		</div>
	</div>

	<div class="section">
		<h2 class="title title--h2"><img class="title-icon" src="/SiteSample/assets/icons/icon-experience.svg" alt="" /> Experience</h2>
		<div class="timeline">
			@foreach (var item in Model.Experiences)
			{
			<!-- Item -->
			<article class="timeline__item">
				<h5 class="title title--h3 timeline__title">@item.ExperienceTitle </h5>
				<span class="timeline__period">@item.ExperienceDuration</span>
				<p class="timeline__description">@item.Description</p>
			</article>
			}


		</div>
	</div>

	<!-- Skills -->
	<div class="section">
		<h2 class="title title--h2">My Skills</h2>
		<div class="box-gray">
			@foreach (var item in Model.MySkills)
			{
			<!-- Progress -->
			<div class="progress">
					<div class="progress-bar" role="progressbar" aria-valuenow="@item.Percenttage" aria-valuemin="0" aria-valuemax="100">
					<div class="progress-text"><span>@item.SkillTitle</span><span>@item.Percenttage%</span></div>
				</div>
				<div class="progress-text"><span>@item.SkillTitle</span></div>
			</div>
			}
		</div>
	</div>
</div><!-- Content End -->
